        self.ATUALIZAR_Button = ctk.CTkButton(self.tabview.tab("Controle de Dados"),text='‚úè Atualizar',command = ATUALIZAR, 
                                font=("arial",12), height=30, width=73,corner_radius=8, border_width=1.5 ,#border_color='',
                                fg_color = '#02783b', hover_color ='#179c57'  )
        self.ATUALIZAR_Button.place(x=18+215+12+117+60+77,y=50+65+63+54)
        
        #criando bot√£o limpar
        self.LIMPAR_Button = ctk.CTkButton(self.tabview.tab("Controle de Dados"),text='‚ú®Limpar',text_color='black',command = clear_all ,  
                                font=("arial",11), height=20, width=30,corner_radius=8, border_width=1.5 ,#border_color='',
                                fg_color = '#e6a902', hover_color ='#b88702'  )#fg_color = 'silver', hover_color ='white')
        self.LIMPAR_Button.place(x=18,y=65)
        
        #criando fun√ß√£o gatilho para bot√£o de busca
        def busca_button():
            
            lista_filtro = ['ID','Vencidos','Identif.','C√≥digo','Resp.','Validade','Volume']
            
            if self.Busca_entry.get().upper() == 'VENCIDOS' or self.Filtro_entry.get() == 'Vencidos':
                resultado = add_to_TREEVIEW()
                messagebox.showinfo('Resultado da busca', f'Foram encontrados {resultado} \nitens vencidos.')
            
            elif self.Filtro_entry.get() in lista_filtro and self.Busca_entry.get() != '':
                resultado = add_to_TREEVIEW()
                
                if resultado != 0 and self.Filtro_entry.get() != 'ID':
                    if resultado != 1:
                        messagebox.showinfo('Resultado da busca', f'Foram encontrados {resultado} itens.')
                    else:
                        messagebox.showinfo('Resultado da busca', f'Apenas 1 item foi encontrado.')
                        
                elif resultado != 0 and self.Filtro_entry.get() == 'ID':  
                    pass
                
                else:
                    messagebox.showinfo('Resultado da busca', 'Nenhum item foi encontrado.')
                    
            else:
                messagebox.showinfo('Busca vazia', 'Por favor, digite sua pesquisa\nna barra de busca e selecione\num dos filtros listados.')
        
        # criando bot√£o de gatilho para  buscar de itens
        def take_entry_Busca():
            return self.Busca_entry.get()
        self.Busca_Button = ctk.CTkButton(self.tabview.tab("Controle de Dados"),text='üîç',text_color = 'black',command = busca_button , 
                                font=("arial",18), height=35, width=35,corner_radius=8, border_color='silver',
                                border_width=1.5, fg_color = 'silver', hover_color ='white'  ) 
        self.Busca_Button.place(x=18+208,y=25)
            
        ####  CRIANDO TREEVIEW PARA ABA "Controle de Dados"  #################################################
        
        #criando frame da treeview
        self.TREEVIEW_Frame = CTkFrame(self.tabview.tab("Controle de Dados"))
        self.TREEVIEW_Frame.place(x=18,y=285)
        
        #criando um estilo para Treeview
        self.style = Style(self.TREEVIEW_Frame)
        
        self.style.theme_use('clam')
        self.style.configure('Treeview', font = ("arial",9),foreground='black',background='silver',fieldbackround='black')
        self.style.map('Treeview', background=[('selected','#012563')])#'#036491')])
        
        #criando scrollbar para treeview
        self.TREEVIEW_scrollbar = Scrollbar(self.TREEVIEW_Frame)
        self.TREEVIEW_scrollbar.pack(side=RIGHT,fill=Y )
        
        #criando Treeview
        self.TREEVIEW = Treeview(self.TREEVIEW_Frame,yscrollcommand=self.TREEVIEW_scrollbar.set ,height=7 )
        self.TREEVIEW.pack()#place(x=18,y=285)
        #ativando o click da scrollbar
        self.TREEVIEW_scrollbar.config(command=self.TREEVIEW.yview)
        #criando colunas
        self.TREEVIEW['columns'] = ('Identif.','ID','C√≥digo','Validade','Respons√°vel','Volume')
        self.TREEVIEW.column('#0', width=0, stretch=NO)
        self.TREEVIEW.column('Identif.',anchor=CENTER, width=70)
        self.TREEVIEW.column('ID',anchor=CENTER, width=102)
        self.TREEVIEW.column('C√≥digo',anchor=CENTER, width=110)
        self.TREEVIEW.column('Respons√°vel',anchor=CENTER, width=132)
        self.TREEVIEW.column('Validade',anchor=CENTER, width=112)
        self.TREEVIEW.column('Volume',anchor=CENTER, width=101)
        
        #inserindo nome das colunas
        self.TREEVIEW.heading('Identif.', text='Identif.')
        self.TREEVIEW.heading('ID', text='ID')
        self.TREEVIEW.heading('C√≥digo', text='C√≥digo')
        self.TREEVIEW.heading('Respons√°vel', text='Respons√°vel')
        self.TREEVIEW.heading('Validade', text='Validade')
        self.TREEVIEW.heading('Volume', text='Volume')
        
        
        self.TREEVIEW.bind('<ButtonRelease>', display_data)
        
        add_to_TREEVIEW()
        
        ##### CRIANDO ABA DE "Corre√ß√µes" #################################################################
        
        #criando label de aviso
        self.Aviso_Label = ctk.CTkLabel(self.tabview.tab("Corre√ß√µes"), text = """***Use apenas para corrigir c√≥digos ou respons√°veis com erros de digita√ß√£o.\n***N√£o use para alterar itens com cadastro incorreto!""",
                                        font=("arial",13), justify = "center")
        self.Aviso_Label.pack(pady=5)
        
        #criando frame para aba altera√ß√µes
        self.Altera√ß√£o_Frame = ctk.CTkFrame(self.tabview.tab("Corre√ß√µes"),
                                            width=700*0.5, height=510*0.75, border_color='grey',
                                            border_width = 2, fg_color='white')
        self.Altera√ß√£o_Frame.pack(pady=10)
      
            
        #criando Label para corre√ß√£o de c√≥digos velhos
        self.Label_Altera√ß√£o_c√≥digo = ctk.CTkLabel(self.Altera√ß√£o_Frame, text='Corre√ß√£o de C√≥digos', text_color='#4e4f4f',
                                               font=("arial",16,"bold"))
        self.Label_Altera√ß√£o_c√≥digo.place(x = 30, y =17+5 )                                       
        self.Label_combo_c√≥digo = ctk.CTkLabel(self.Altera√ß√£o_Frame, text='Velho:', text_color='black',
                                               font=("arial",14,"bold"))
        self.Label_combo_c√≥digo.place(x=30,y=50)
        #criando combobox para corre√ß√£o de c√≥digos velhos
        self.combo_c√≥digo = ctk.CTkComboBox(self.Altera√ß√£o_Frame,values = self.c√≥digos , 
                                        width=150, height=35, font=('arial',14))
        self.combo_c√≥digo.place(x=29.5,y=50+25)
        
        #criando Label Novo para corre√ß√£o de c√≥digos novos
        self.Label_combo_c√≥digo = ctk.CTkLabel(self.Altera√ß√£o_Frame, text='Novo:', text_color='black',
                                               font=("arial",14,"bold"))
        self.Label_combo_c√≥digo.place(x=30+155,y=50)
        #criando combobox para corre√ß√£o de c√≥digos novos
        self.entry_c√≥digo_novo = ctk.CTkEntry(self.Altera√ß√£o_Frame, 
                                        width=135, height=35, font=('arial',14))
        self.entry_c√≥digo_novo.place(x=29.5+155,y=50+25)
        
        
        #criando Label para corre√ß√£o de respons√°veis velhos
        self.Label_Altera√ß√£o_Resp = ctk.CTkLabel(self.Altera√ß√£o_Frame, text='Corre√ß√£o de Respons√°veis', text_color='#4e4f4f',
                                               font=("arial",16,"bold"))
        self.Label_Altera√ß√£o_Resp.place(x = 30, y =17+130 )                                       
        self.Label_combo_Resp = ctk.CTkLabel(self.Altera√ß√£o_Frame, text='Velho:', text_color='black',
                                               font=("arial",14,"bold"))
        self.Label_combo_Resp.place(x=30,y=50+125)
        #criando combobox para corre√ß√£o de respons√°veis velhos
        self.combo_Resp = ctk.CTkComboBox(self.Altera√ß√£o_Frame,values = self.Respons√°veis ,
                                        width=150, height=35, font=('arial',14))
        self.combo_Resp.place(x=29.5,y=50+25+125)
        
        #criando Label da combobox para corre√ß√£o de respons√°veis novos
        self.Label_combo_Resp = ctk.CTkLabel(self.Altera√ß√£o_Frame, text='Novo:', text_color='black',
                                               font=("arial",14,"bold"))
        self.Label_combo_Resp.place(x=30+155,y=50+125)
        #criando combobox para corre√ß√£o de respons√°veis novos
        self.entry_Resp_novo = ctk.CTkEntry(self.Altera√ß√£o_Frame, 
                                        width=135, height=35, font=('arial',14))
        self.entry_Resp_novo.place(x=29.5+155,y=50+25+125)
      
    
        #criando fun√ß√£o para atualiza√ß√£o de dados da aba corre√ß√£o
        def CORRIGIR_Atualizar():
            
            C√≥digo_wrong = self.combo_c√≥digo.get()
            C√≥digo_right = self.entry_c√≥digo_novo.get().upper().strip()
            
            Resp_wrong = self.combo_Resp.get()
            Resp_right = self.entry_Resp_novo.get().title().strip()
            
            
            
            if C√≥digo_wrong == ''  and C√≥digo_right == '' and Resp_wrong == '' and Resp_right == '':
                messagebox.showerror('Erro ao Corrigir','Por favor, selecione o par√¢metro \nque deseja corrigir.')
                  
            if C√≥digo_wrong != '' and Resp_wrong != '':
                messagebox.showerror('Erro ao Corrigir','Por favor, corrija apenas uma \ncategoria por vez.')
                
            #condi√ß√£o c√≥digo correto
            elif C√≥digo_wrong != ''  and C√≥digo_right != '' and Resp_wrong == '' and Resp_right == '':
                
                if codigo_exists(C√≥digo_wrong) == True:
                    
                    data_correction(C√≥digo_wrong, C√≥digo_right, 'C√≥digos', 'Atualizar')
                    
                    add_to_TREEVIEW()
                    
                    followup_C√≥digos = tuple_to_list(fetch_itens(Table_C√≥digos))
                    self.Codigo_entry.configure(values = followup_C√≥digos)
                    self.combo_c√≥digo.configure(values = followup_C√≥digos)
                    
                    messagebox.showinfo('Atualiza√ß√£o bem sucedida!',f'O item {C√≥digo_wrong} foi atualizado \npara {C√≥digo_right} com sucesso!')
                
                else:
                    messagebox.showerror('Erro ao Corrigir','Por favor, selecione um c√≥digo \nj√° cadastrado.')
                
            #condi√ß√£o respons√°vel correto
            elif C√≥digo_wrong == ''  and C√≥digo_right == '' and Resp_wrong != '' and Resp_right != '':
                
                if resp_exists(Resp_wrong) == True:
                    
                    data_correction(Resp_wrong, Resp_right, 'Respons√°veis', 'Atualizar')
                    
                    add_to_TREEVIEW()
                    
                    followup_Respons√°veis = tuple_to_list(fetch_itens(Table_Resp))
                    self.Responsavel_entry.configure(values = followup_Respons√°veis)
                    self.combo_Resp.configure(values = followup_Respons√°veis)
                    
                    messagebox.showinfo('Atualiza√ß√£o bem sucedida!',f'O item {Resp_wrong} foi atualizado \npara {Resp_right} com sucesso!')
                
                else:
                    messagebox.showerror('Erro ao Corrigir','Por favor, selecione um respons√°vel \nj√° cadastrado.')
            
            else:
                messagebox.showerror('Erro ao Corrigir','Por favor, corrija apenas uma \ncategoria por vez.')
                
        
        #criando fun√ß√£o para exclus√£o de dados da aba corre√ß√£o
        def CORRIGIR_Deletar():
            
            C√≥digo_wrong = self.combo_c√≥digo.get()
            C√≥digo_right = self.entry_c√≥digo_novo.get().upper().strip()
            
            Resp_wrong = self.combo_Resp.get()
            Resp_right = self.entry_Resp_novo.get().title().strip()
            
            
            
            if C√≥digo_wrong == '' and Resp_wrong == '':
                messagebox.showerror('Erro ao Corrigir','Por favor, selecione o par√¢metro \nque deseja corrigir.')
                  
            if C√≥digo_wrong != '' and Resp_wrong != '':
                messagebox.showerror('Erro ao Corrigir','Por favor, corrija apenas uma \ncategoria por vez.')
                  
            #condi√ß√£o c√≥digo correto
            elif C√≥digo_wrong != '':
                
                if codigo_exists(C√≥digo_wrong) == True:
                    
                    data_correction(C√≥digo_wrong, C√≥digo_right, 'C√≥digos', 'Deletar')
                    
                    add_to_TREEVIEW()
                    
                    followup_C√≥digos = tuple_to_list(fetch_itens(Table_C√≥digos))
                    self.Codigo_entry.configure(values = followup_C√≥digos)
                    self.combo_c√≥digo.configure(values = followup_C√≥digos)
                    
                    messagebox.showinfo('Exclus√£o bem sucedida!',f'O item {C√≥digo_wrong} foi exclu√≠do com sucesso!')
                
                else:
                    messagebox.showerror('Erro ao Corrigir','Por favor, selecione um c√≥digo \nj√° cadastrado.')
                
            #condi√ß√£o respons√°vel correto
            elif Resp_wrong != '':
                
                if resp_exists(Resp_wrong) == True:
                    
                    data_correction(Resp_wrong, Resp_right, 'Respons√°veis', 'Deletar')
                    
                    add_to_TREEVIEW()
                    
                    followup_Respons√°veis = tuple_to_list(fetch_itens(Table_Resp))
                    self.Responsavel_entry.configure(values = followup_Respons√°veis)
                    self.combo_Resp.configure(values = followup_Respons√°veis)
                    
                    messagebox.showinfo('Exclus√£o bem sucedida!',f'O item {Resp_wrong} foi exclu√≠do com sucesso!')
                
                else:
                    messagebox.showerror('Erro ao Corrigir','Por favor, selecione um respons√°vel \nj√° cadastrado.')
            
            else:
                messagebox.showerror('Erro ao Corrigir','Por favor, corrija apenas uma \ncategoria por vez.')
                
        #criando bot√£o para ATUALIZAR dados
        self.ATUALIZAR_Button_corre√ß√µes = ctk.CTkButton(self.Altera√ß√£o_Frame,text='‚¨Ü Atualizar',command = CORRIGIR_Atualizar , 
                                font=("arial",19), height=35, width=110,corner_radius=8, border_width=1.5 ,#border_color='',
                                fg_color = '#02783b', hover_color ='#179c57'  )
        self.ATUALIZAR_Button_corre√ß√µes.place(x=60,y=50+65+63+54+35)
        
          
        #criando bot√£o deletar na aba corre√ß√µes
        self.DELETAR_Button_corre√ß√µes = ctk.CTkButton(self.Altera√ß√£o_Frame,text='‚ùå Deletar',command = CORRIGIR_Deletar , 
                                font=("arial",19), height=35, width=100,corner_radius=8, border_width=1.5 ,
                                fg_color = '#a60202', hover_color ='#ba2929' )
        self.DELETAR_Button_corre√ß√µes.place(x=185,y=50+65+63+54+35)
        
        
        #criando fun√ß√£o para limpar aba corre√ß√µes
        def clear_corrections():
            
            self.combo_c√≥digo.set('')
            self.entry_c√≥digo_novo.delete(0,END)
        
            self.combo_Resp.get.set('')
            self.entry_Resp_novo.delete(0,END)
            
        
        
        #criando bot√£o limpar
        self.LIMPAR_Button_corre√ß√µes = ctk.CTkButton(self.Altera√ß√£o_Frame,text='‚ú®Limpar',text_color='black',command = clear_corrections ,  
                                font=("arial",17), height=30, width=50,corner_radius=8, border_width=1.5 ,#border_color='',
                                fg_color = '#e6a902', hover_color ='#b88702'  )#fg_color = 'silver', hover_color ='white')
        self.LIMPAR_Button_corre√ß√µes.place(x=130,y=330)   


