        #criando fun√ß√£o para limpar aba corre√ß√µes
        def clear_corrections():
            
            self.combo_c√≥digo.set('')
            self.entry_c√≥digo_novo.delete(0,END)
        
            self.combo_Resp.set('')
            self.entry_Resp_novo.delete(0,END)
            
        
        
